<h5 class="card-subtitle mb-2 mt-1 text-muted font-weight-light">{{lang_dashboard_details_subtitle}}</h5>
<hr>

<table class="table table-bordered mb-4 col-sm-8">
    <tr>
        <td>{{lang_dashboard_details_desctotalviews}}</td>
        <td><span id="viewcount_details_totalcount">...</span> {{lang_dashboard_details_views}}</td>
    </tr>
</table>


<h5 class="card-subtitle mb-2 text-muted font-weight-light">{{lang_dashboard_statistics}}</h5>
<hr>
<p><i>{{lang_dashboard_details_canexpanddesc}}</i></p>
<div class="accordion" id="boxdashboard-accordion">
  <!-- Always show menu card -->
  <div class="card">
    <button class="btn btn-secondary btn-block text-left" type="button" data-toggle="collapse" data-target="#boxdashboard-details-viewcount-one" aria-expanded="true" aria-controls="boxdashboard-details-viewcount-one">
        <i class="fa fa-chevron-down"></i> {{lang_dashboard_details_visitsperday}}
    </button>

    <!-- Content of collapsed body -->
    <div id="boxdashboard-details-viewcount-one" class="collapse show" aria-labelledby="headingOne" data-parent="#boxdashboard-accordion">
      <div class="card-body">
      <p>{{lang_dashboard_details_visitsperdaydesc}}</p>
        <div id="viewcount_details_chartcontainer">
            <canvas id="viewcount_details_chart"></canvas>
        </div>
      </div>
    </div>
  </div>

  <div class="card">
    <button class="btn btn-secondary btn-block text-left collapsed" type="button" data-toggle="collapse" data-target="#boxdashboard-details-viewcount-two" aria-expanded="false" aria-controls="boxdashboard-details-viewcount-two">
        <i class="fa fa-chevron-down"></i> {{lang_dashboard_details_visitsperpage}}
    </button>

    <div id="boxdashboard-details-viewcount-two" class="collapse" aria-labelledby="headingTwo" data-parent="#boxdashboard-accordion">
      <div class="card-body" id="viewcount_details_subchartcontainer">
        Deze functionaliteit bestaat nog niet in deze versie.
      </div>
    </div>
  </div>

</div>
