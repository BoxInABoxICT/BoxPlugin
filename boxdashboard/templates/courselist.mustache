<!-- This container displays the rendered page -->
<div class="container-fluid mt-4">
    <!-- Row for generic headers -->
    <div class="row">
        <div class="col-md-12">
            <h2 class="font-weight-light">{{lang_courselist_statistics}}</h2>
            <h5 class="text-muted align-text-bottom font-weight-light">{{lang_courselist_header}}</h5>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            {{#courses.0}}
            <!-- If a teacher has courses -->
            <table class="table table-striped table-bordered mt-4">
                <thead>
                    <tr>
                        <th>{{lang_courselist_status}}</th>
                        <th>{{lang_courselist_name}}</th>
                        <th>{{lang_courselist_participants}}</th>
                        <th>{{lang_courselist_topics}}</th>
                        <th>{{lang_courselist_emodules}}</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                {{#courses}}
                <tr>
                    {{#hasStarted}}
                        {{#hasEnded}}
                            <td><span class="badge badge-danger">{{lang_courselist_status_ended}}</span></td>
                        {{/hasEnded}}
                        {{^hasEnded}}
                            <td><span class="badge badge-success">{{lang_courselist_status_active}}</span></td>
                        {{/hasEnded}}
                    {{/hasStarted}}
                    {{^hasStarted}}
                        <td><span class="badge badge-secondary">{{lang_courselist_status_notstarted}}</span></td>
                    {{/hasStarted}}
                    <td class="course_name">{{fullname}}</td>
                    <td class="course_studentcnt">{{enrolments}}</td>
                    <td class="course_studentcnt">{{topics}}</td>
                    <td class="course_studentcnt">{{modules}}</td>
                    <td class="course_gobutton">
                        <div class="clearfix">
                            <button class="btn btn-dark btn-sm float-right" onclick="location.href='{{courseURL}}?cid={{courseid}}'">{{lang_courselist_load}}<i class="fa fa-arrow-right"></i></button>
                        </div>
                    </td>
                </tr>
                {{/courses}}
                </tbody>
            </table>
            {{/courses.0}}
            {{^courses.0}}
            <!-- If no courses could be found -->
            <table class="table table-striped table-bordered mt-4">
                <tr>
                    <td><i>{{lang_courselist_nocourses}}</i></td>
                </tr>
            </table>
            {{/courses.0}}
        </div>
    </div>
